/*-------------------
       Fonts
--------------------*/

@googleProtocol    : '//';


/*-------------------
      Site Colors
--------------------*/

/*---  Colors  ---*/
@black            : #29292C;
@blue             : #549DC5;
@green            : #5BBD72;//
@grey             : #BDBDBD;
@orange           : #EE7757;
@pink             : #D487BE;
@purple           : #9B59B6;
@red              : #D82845;
@rose             : #C67C88;
@teal             : #72B6AF;
@yellow           : #F2C61F;//

/*---  Light Colors  ---*/
@lightBlack       : #2D2D30;
@lightBlue        : #28B8D8;
@lightGreen       : #2ECC40;//
@lightOrange      : #FF851B;//
@lightPink        : #FF8EDF;//
@lightPurple      : #CDC6FF;//
@lightRed         : #FF695E;//
@lightTeal        : #6DFFFF;//
@lightYellow      : #FFE21F;//

/*---   Neutrals  ---*/
@fullBlack        : #000000;//
@darkGrey         : #AAAAAA;//
@lightGrey        : #DCDDDE;//
@offWhite         : #F7F7F7;
@darkWhite        : #F0F0F0;//
@white            : #FFFFFF;//

/*-------------------
        Page
--------------------*/

@pageBackground      : @lightBlack;
@textColor           : @lightGrey;


/*-------------------
       Links
--------------------*/

@linkColor           : @blue;
@linkHoverColor      : lighten(@linkColor, 5);


/*-------------------
        Grid
--------------------*/

@columnCount: 12;


/*-------------------
     Neutral Text
--------------------*/

@darkTextColor               : #838383;
@lightTextColor              : #E3E3E3;

@unselectedTextColor         : fadeout(@textColor, 50);
@hoveredTextColor            : @lightTextColor;
@pressedTextColor            : @lightTextColor;
@selectedTextColor           : @lightTextColor;
@disabledTextColor           : fadeout(@textColor, 80);

@headerColor                 : @lightTextColor;
