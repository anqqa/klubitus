/*******************************
     User Global Variables
*******************************/

/*-------------------
       Fonts
--------------------*/

@googleProtocol    : 'https://';


/*-------------------
        Page
--------------------*/

@pageBackground      : #2C2C2C;
@textColor           : rgb(127, 127, 127);


/*-------------------
        Grid
--------------------*/

@columnCount: 12;


/*-------------------
     Neutral Text
--------------------*/

@darkTextColor               : darken(@textColor, 5);
@lightTextColor              : rgba(255, 255, 255, 0.75);

@unselectedTextColor         : fadeout(@textColor, 50);
@hoveredTextColor            : @lightTextColor;
@pressedTextColor            : @lightTextColor;
@selectedTextColor           : @lightTextColor;
@disabledTextColor           : fadeout(@textColor, 80);

@headerColor                 : #fafcfb;
