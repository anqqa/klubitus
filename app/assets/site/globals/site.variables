@invertedHoveredTextColor    : rgba(255, 255, 255, 1);
@invertedPressedTextColor    : rgba(255, 255, 255, 1);
@invertedSelectedTextColor   : rgba(255, 255, 255, 1);
@invertedDisabledTextColor   : rgba(255, 255, 255, 0.2);
*/


/*-------------------
      Borders
--------------------*/

@borderColor                   : rgba(127, 127, 127, 0.1);
@solidBorderColor              : @borderColor;
@solidSelectedBorderColor      : @borderColor;



/*-------------------
        klubitus
--------------------*/

@mainmenuBackground: rgba(127, 127, 127, 0.06);
@mainmenuWidth:      140px + 2 * @emSize;
@mainMobileWidth:    2.5 * @emSize + 2 * @emSize;
